User
    ident Text
    UniqueUser ident
    admin Bool
    displayName Text Maybe
    deriving Typeable
    deriving Show
Cube
    name Text
    list [Text]
    UniqueCubeName name
    deriving Show
Card
    name Text
    colors [Text]
    -- ie instant, land
    -- not super types like legendary or subtypes like human
    types [Text]
    UniqueCardName name
    deriving Show
Draft
    creator UserId
    cubeId CubeId
    participants [UserId]
    rounds Word default=45
    created UTCTime
    deriving Show
Pick
    draft DraftId
    number Int -- starts at 0, ascends for each pick
    card Text -- invariant: one of the cards in the associated cube list
    drafter UserId
    UniquePick draft number
    created UTCTime
    deriving Show

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)
